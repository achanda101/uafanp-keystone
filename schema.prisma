datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model HomePage {
  id             Int       @id
  title          String    @default("")
  heroHeading    String    @default("")
  heroSubheading String    @default("")
  ctaButtonText  String    @default("")
  ctaButtonUrl   String    @default("")
  toPublish      String?   @default("draft")
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @default(now()) @updatedAt
}

model GrantType {
  id              String    @id @default(cuid())
  title           String    @default("")
  slug            String    @unique @default("")
  description     String    @default("")
  grantAmount     String    @default("")
  timeFrame       String    @default("")
  availability    String    @default("")
  commonUses      String    @default("")
  badgeText       String    @default("")
  badgeColor      String?   @default("grant-turmeric")
  backgroundColor String?   @default("light-sky")
  grantPurpose    String    @default("")
  isDisplayed     String?   @default("visible")
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @default(now()) @updatedAt
}

model Page {
  id             String    @id @default(cuid())
  title          String    @default("")
  heroHeading    String    @default("")
  heroSubheading String    @default("")
  ctaButtonText  String    @default("")
  ctaButtonUrl   String    @default("")
  slug           String    @unique @default("")
  toPublish      String?   @default("draft")
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @default(now()) @updatedAt
}

model Post {
  id        String    @id @default(cuid())
  title     String    @default("")
  banner    String?
  content   String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  author    User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId  String?   @map("author")
  tags      Tag[]     @relation("Post_tags")
  slug      String    @unique @default("")
  toPublish String?   @default("draft")
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now()) @updatedAt

  @@index([authorId])
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  posts     Post[]    @relation("Post_author")
  createdAt DateTime? @default(now())
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}
